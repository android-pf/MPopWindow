<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <stroke android:width="2dp" android:color="#FFFFFF" />
            <gradient android:angle="270" android:endColor="#FFFFFF"
                      android:startColor="#FFFFFF" />
            <corners android:radius="2dp" />
        </shape>
    </item>

    <item>
        <shape>
            <stroke android:width="2dp" android:color="#fefefe" />
            <gradient android:angle="270" android:endColor="#fefefe"
                      android:startColor="#fefefe" />
            <corners android:radius="2dp" />
            <padding android:bottom="8dp" android:top="8dp" />
        </shape>
    </item>

</selector>